@model IEnumerable<ECommerce.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<h1>Orders</h1>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Customer</th>
            <th>Order Date</th>
            <th>Total Amount</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.Customer.Name</td>
                <td>@order.OrderDate.ToString("MM/dd/yyyy")</td>
                <td>$@order.TotalAmount</td>
                <td>
                    <a href="/Order/Details/@order.Id" class="btn btn-info">Details</a>
                    <a href="/Order/Edit/@order.Id" class="btn btn-warning">Edit</a>
                    <a href="/Order/Delete/@order.Id" class="btn btn-danger" onclick="return confirm('Are you sure?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Order/Create" class="btn btn-primary">Create New Order</a>
