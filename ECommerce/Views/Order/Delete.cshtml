@model ECommerce.Models.Order

<h2>Delete Order</h2>
<p>Are you sure you want to delete this order?</p>
<ul>
    <li><strong>ID:</strong> @Model.Id</li>
    <li><strong>Customer ID:</strong> @Model.CustomerId</li>
    <li><strong>Order Date:</strong> @Model.OrderDate.ToShortDateString()</li>
    <li><strong>Total Amount:</strong> @Model.TotalAmount</li>
</ul>
<form method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="/Order" class="btn btn-secondary">Cancel</a>
</form>
