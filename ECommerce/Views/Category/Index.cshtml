@model List<ECommerce.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<h1>Categories</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>
                    <a href="/Category/Details/@item.Id" class="btn btn-info">Details</a>
                    <a href="/Category/Edit/@item.Id" class="btn btn-warning">Edit</a>
                    <a href="/Category/Delete/@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create New Category</a>
